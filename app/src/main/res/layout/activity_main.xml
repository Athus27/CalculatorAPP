<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color6"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TableLayout

        android:id="@+id/painel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:background="@color/color6.2"
        android:orientation="vertical"
        tools:ignore="DuplicateIds,ExtraText">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/calculo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginTop="2dp"
                android:layout_weight="4"
                android:text=""
                android:textColor="@color/white"
                android:textSize="36dp">

            </TextView>

            <Button
                android:id="@+id/historico"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:ellipsize="end"
                android:gravity="right"
                android:maxEms="10"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="20dp"
                tools:text="1+1" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0">

            <TextView
                android:id="@+id/resultado1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end"
                android:maxEms="10"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="50dp"
                tools:text="2" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TableRow
            android:layout_weight="0"
            android:scaleX="1"
            android:scaleY="0.9"

            >

            <ImageButton
                android:id="@+id/cientifica"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginEnd="100dp"
                android:layout_weight="1"
                android:background="@color/color5"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_calculate_24">

            </ImageButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/percentual"
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@color/color4"
                android:text="%"
                android:textColor="@color/white"
                android:textSize="36sp" />

        </TableRow>

        <TableRow android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ce"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@color/color7"
                android:text="ce"
                android:textColor="@color/white"
                android:textSize="36sp"

                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/parentese_aberto"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/color4"
                android:text="("
                android:textColor="@color/white"
                android:textSize="36sp"

                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/parentese_fechado"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/color4"
                android:text=")"
                android:textColor="@color/white"
                android:textSize="36sp"

                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/divisao"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1.45"
                android:background="@color/color4"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="36sp" />

        </TableRow>

        <TableRow android:layout_weight="1">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/color2"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="36sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/oito"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/color2"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="36sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nove"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/color2"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="36sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/multiplicacao"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/color4"
                android:text="*"
                android:textColor="@color/white"
                android:textSize="36sp" />

        </TableRow>

        <TableRow android:layout_weight="1">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/quatro"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/color2"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="36sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cinco"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/color2"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="36sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/seis"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/color2"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="36sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/subtracao"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/color4"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="36sp" />

        </TableRow>

        <TableRow android:layout_weight="1">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/um"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/color2"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="36sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dois"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/color2"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="36sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tres"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/color2"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="36sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/soma"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/color4"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="36sp" />

        </TableRow>

        <TableRow android:layout_weight="1">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ponto"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/color2"
                android:text="."
                android:textColor="@color/white"
                android:textSize="36sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/zero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/color2"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="36sp" />

            <ImageButton
                android:id="@+id/excluir"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"

                android:background="@color/color2"
                android:scaleType="center"
                android:src="@drawable/ic_delete_24" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/igual"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/color4"
                android:text="="
                android:textColor="@color/white"
                android:textSize="36sp" />

        </TableRow>

    </TableLayout>


</LinearLayout>


