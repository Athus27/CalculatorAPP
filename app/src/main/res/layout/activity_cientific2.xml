<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color6"
    tools:context=".Cientific">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <LinearLayout
            android:id="@+id/quadro1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_weight="1.5">

                <TextView
                    android:id="@+id/calculoVisor"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:gravity="left|bottom"
                    android:text="teste"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_constraintEnd_toEndOf="parent"
                    tools:layout_constraintTop_toTopOf="parent"></TextView>

                <androidx.appcompat.widget.AppCompatButton

                    android:id="@+id/historicoVisor"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="right|bottom"
                    android:text="teste"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    >

                </androidx.appcompat.widget.AppCompatButton>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/modoText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:gravity="bottom|start"
                    android:text="Â°"
                    android:alpha="0.5"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    >
                </TextView>

                <TextView
                    android:id="@+id/resultadoText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end|bottom"
                    android:maxEms="10"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="36sp"
                    tools:text="2" />

            </LinearLayout>

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TableRow
                android:layout_width="10dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                >


                <ImageButton
                    android:id="@+id/normal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:height="0dp"
                    android:background="@color/color7"
                    android:src="@drawable/baseline_normal_24" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/ce"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="2"
                    android:background="@color/color7"
                    android:text="ce"
                    android:textColor="@color/white"
                    android:textSize="26sp"

                    />


                <ImageButton
                    android:id="@+id/mudarModo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:height="0dp"

                    android:background="@color/color7"

                    android:src="@drawable/icone_calculadora" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/parentese_aberto"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/color4"
                    android:text="("
                    android:textColor="@color/white"
                    android:textSize="26sp"

                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/parentese_fechado"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/color4"
                    android:text=")"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:gravity="center_horizontal"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    />




            </TableRow>

            <TableRow
                android:layout_width="10dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                >


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/sen"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/color4"
                    android:text="sen"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="26sp"

                    />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/cos"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/color4"
                    android:text="cos"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="26sp"

                    />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/tang"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/color4"
                    android:text="tan"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="26sp"

                    />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/percentual"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/color7"

                    android:text="%"
                    android:textColor="@color/white"
                    android:textSize="32sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/divisao"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/color4"
                    android:text="/"
                    android:textColor="@color/white"
                    android:textSize="30sp" />


            </TableRow>


            <TableRow
                android:layout_width="10dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                >


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/sete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/color2"
                    android:text="7"
                    android:textColor="@color/white"
                    android:textSize="26sp" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/oito"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/color2"
                    android:text="8"
                    android:textColor="@color/white"
                    android:textSize="26sp" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/nove"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/color2"
                    android:text="9"
                    android:textColor="@color/white"
                    android:textSize="26sp" />


                <ImageButton
                    android:id="@+id/e"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/color7"
                    android:src="@drawable/icone_e_x" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/multiplicacao"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/color4"
                    android:text="*"
                    android:textColor="@color/white"
                    android:textSize="30sp" />



            </TableRow>

            <TableRow
                android:layout_width="10dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                >


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/quatro"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/color2"
                    android:text="4"
                    android:textColor="@color/white"
                    android:textSize="26sp" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/cinco"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/color2"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="26sp" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/seis"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/color2"
                    android:text="6"
                    android:textColor="@color/white"
                    android:textSize="26sp" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/raiz"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/color7"
                    android:text="â"
                    android:textColor="@color/white"
                android:textSize="30sp" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/subtracao"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/color4"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="30sp" />



            </TableRow>

            <TableRow
                android:layout_width="10dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                >


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/um"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/color2"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="26sp" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/dois"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/color2"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="26sp" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/tres"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/color2"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="26sp" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/fatorial"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/color7"
                    android:text="X!"
                    android:textColor="@color/white"
                    android:textSize="30sp" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/soma"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/color4"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="30sp" />



            </TableRow>

            <TableRow
                android:layout_width="10dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                >


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/ponto"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/color2"
                    android:lineSpacingExtra="8sp"
                    android:text="."
                    android:textColor="@color/white"
                    android:textSize="30sp" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/zero"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/color2"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="26sp" />


                <ImageButton
                    android:id="@+id/delete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/color2"
                    android:src="@drawable/ic_delete_24"
                    />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/potencia"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/color7"
                    android:text="XÂ²"
                    android:textColor="@color/white"
                    android:textSize="30sp" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/igual"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/color4"
                    android:text="="
                    android:textColor="@color/white"
                    android:textSize="30sp" />



            </TableRow>


        </TableLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>